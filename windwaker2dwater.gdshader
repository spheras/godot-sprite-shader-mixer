vec3 WINDWAKER2DWATER_water(vec2 uv, vec3 cdir, float iTime)
{
    uv *= vec2(0.25);

    // Parallax height distortion with two directional waves at
    // slightly different angles.
    vec2 a = 0.025 * cdir.xz / cdir.y; // Parallax offset
    float h = sin(uv.x + iTime); // Height at UV
    uv += a * h;
    h = sin(0.841471 * uv.x - 0.540302 * uv.y + iTime);
    uv += a * h;
    
    // Texture distortion
    float d1 = mod(uv.x + uv.y, WINDWAKER2DWATER_TWOPI);
    float d2 = mod((uv.x + uv.y + 0.25) * 1.3, WINDWAKER2DWATER_SIXPI);
    d1 = iTime * 0.07 + d1;
    d2 = iTime * 0.5 + d2;
    vec2 dist = vec2(
    	sin(d1) * 0.15 + sin(d2) * 0.05,
    	cos(d1) * 0.15 + cos(d2) * 0.05
    );
    
    vec3 ret = mix(WINDWAKER2DWATER_WATER_COL.rgb, WINDWAKER2DWATER_WATER2_COL.rgb, WINDWAKER2DWATER_waterlayer(uv + dist.xy));
    ret = mix(ret, WINDWAKER2DWATER_FOAM_COL.rgb, WINDWAKER2DWATER_waterlayer(vec2(1.0) - uv - dist.yx));
    return ret;
}
void windWaker2DWater(in vec2 uv2, in sampler2D sampler, vec2 size, vec2 pixelSize, inout vec4 color)
{
	vec2 uv = WINDWAKER2DWATER_globalposition / 32.0;
	color.rgb = vec3(WINDWAKER2DWATER_water(uv * WINDWAKER2DWATER_tile + WINDWAKER2DWATER_offset, vec3(0,1,0), TIME * WINDWAKER2DWATER_distortion_speed));
}

void windWaker2DWater_vertex(inout vec2 globalposition, inout vec2 vertex, in mat4 model_matrix){
	globalposition = (model_matrix * vec4(vertex, 0.0, 1.0)).xy;	
}
